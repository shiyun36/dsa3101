   "source": [
    "client = OpenAI(\n",
    "    base_url=\"https://openrouter.ai/api/v1\",\n",
    "    api_key=API_KEY\n",
    ")\n",
    "\n",
    "output_file = \"pfizer_esg_analysis.json\"\n",
    "\n",
    "# Check if previous results exist\n",
    "if os.path.exists(output_file):\n",
    "    with open(output_file, \"r\") as f:\n",
    "        results = json.load(f)  # Load previous results\n",
    "else:\n",
    "    results = {}  # Start fresh\n",
    "\n",
    "# Process batches\n",
    "for i, batch in enumerate(text_batches):\n",
    "    batch_id = f\"batch_{i+1}\"\n",
    "    \n",
    "    # Skip if already processed\n",
    "    if batch_id in results:\n",
    "        print(f\"Skipping batch {i+1}/{len(text_batches)} (already processed).\")\n",
    "        continue\n",
    "\n",
    "    print(f\"Processing batch {i+1}/{len(text_batches)}...\")\n",
    "\n",
    "    retries = 3  # Retry up to 3 times\n",
    "    while retries > 0:\n",
    "        try:\n",
    "            completion = client.chat.completions.create(\n",
    "                model=\"deepseek/deepseek-r1:free\",\n",
    "                messages=[\n",
    "                    {\"role\": \"system\", \"content\": \"You are an expert in ESG analysis.\"},\n",
    "                    {\"role\": \"user\", \"content\": f\"Extract and classify ESG factors from this part of the report:\\n\\n{batch}\"}\n",
    "                ]\n",
    "            )\n",
    "\n",
    "            # Ensure response is valid\n",
    "            if completion and completion.choices and completion.choices[0].message:\n",
    "                results[batch_id] = completion.choices[0].message.content\n",
    "                break  # Exit retry loop\n",
    "            else:\n",
    "                print(f\"Warning: Empty response for batch {i+1}. Retrying...\")\n",
    "                retries -= 1\n",
    "                time.sleep(5)\n",
    "\n",
    "        except Exception as e:\n",
    "            print(f\"Error processing batch {i+1}: {e}. Retrying...\")\n",
    "            retries -= 1\n",
    "            time.sleep(5)\n",
    "\n",
    "    # **SAVE RESULTS AFTER EACH BATCH**\n",
    "    with open(output_file, \"w\") as f:\n",
    "        json.dump(results, f, indent=4)\n",
    "\n",
    "    print(f\"Batch {i+1} saved successfully.\")\n",
    "\n",
    "print(\"Processing complete. Results saved in 'esg_analysis.json'.\")\n"
   ]
