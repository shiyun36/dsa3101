    "# Save as text\n",
    "with open(\"esg_analysis_final.txt\", \"w\") as f:\n",
    "    f.write(final_text)\n",
    "\n",
    "print(\"Final ESG analysis saved in 'esg_analysis_final.txt'.\")"
